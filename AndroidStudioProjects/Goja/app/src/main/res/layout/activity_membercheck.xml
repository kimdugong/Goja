<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/McFrontText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="에러 발생"
        />

    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/McDefaultView"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            >

            <EditText
                android:id="@+id/McEmailInput1"
                android:hint="이메일을 입력해주세요"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/McBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/McNextView"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            >
            <EditText
                android:id="@+id/McIdinput"
                android:hint="ID를 입력해주세요"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/McEmailInput2"
                android:hint="이메일을 입력해주세요"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/McBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회"
                />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/McResultView"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/McGoback"
        android:textSize="25dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전으로 돌아가기"
        android:textColor="#ff0000"
        />
    </LinearLayout>
</LinearLayout>